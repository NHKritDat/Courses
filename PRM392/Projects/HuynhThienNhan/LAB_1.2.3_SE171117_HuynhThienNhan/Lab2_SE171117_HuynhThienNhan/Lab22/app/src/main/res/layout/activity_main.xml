<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTong"
        android:layout_width="400dp"
        android:layout_height="338dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber1"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:background="#B3B2B2"
        android:ems="10"
        android:inputType="text"
        android:text="Nhập số thứ nhất"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="@+id/textViewTong"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:background="#B3B2B2"
        android:ems="10"
        android:inputType="text"
        android:text="Nhập số thứ hai"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.298" />

    <Button
        android:id="@+id/buttonCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cộng"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="@+id/textViewTong"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/buttonTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trừ"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="@+id/textViewTong"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/buttonNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="@+id/textViewTong"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/buttonChia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTong"
        app:layout_constraintEnd_toEndOf="@+id/textViewTong"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"
        app:layout_constraintVertical_bias="0.596" />

    <TextView
        android:id="@+id/textViewKetQuaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="338dp"
        android:layout_marginBottom="260dp"
        android:text="Kết quả:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKetQuaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="260dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
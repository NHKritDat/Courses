<Window x:Class="CandidateManagement_NguyenHoangDat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandidateManagement_NguyenHoangDat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="253" VerticalAlignment="Top" Width="332" Margin="0,77,0,0">
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="17" Margin="146,145,0,0" VerticalAlignment="Top" Width="120" Password="123@"/>
        </Border>
        <Label Content="WELLCOME TO CANDIDATE SYSTEM" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top"/>
        <Label Content="PLEASE LOGIN" HorizontalAlignment="Center" Margin="0,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="381,182,0,0" TextWrapping="Wrap" Text="admin@hr.com.vn" VerticalAlignment="Top" Width="120"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="299,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="299,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="28" Margin="299,267,0,0" VerticalAlignment="Top" Width="101" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="28" Margin="415,267,0,0" VerticalAlignment="Top" Width="101" Click="btnCancel_Click"/>

    </Grid>
</Window>
